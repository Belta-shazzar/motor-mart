{
  "name": "motor-mart",
  "version": "1.0.0",
  "description": "A base for backend projects with TS, express, and typescript",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:prod": "npm run build && npm run start",
    "test": "dotenv -e .env.test -- cross-env NODE_ENV=test jest --coverage",
    "prisma:init": "prisma init",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "seeder:seed": "ts-node seeders/seed.ts",
    "clean": "rimraf dist"
  },
  "author": "Daniel Oguejiofor",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.6",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.7",
    "prisma": "^5.21.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "5.21.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "decimal.js-light": "^2.5.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.0",
    "typedi": "^0.10.0",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
